<div class="row">
  <div class="col-md-6">
    {{!-- Login form --}}
    <h2 class="heading">Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="email" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="margin-top: 10px;">LOGIN</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    {{!-- Signup form --}}
    <h2 class="heading">Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup">name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup">email:</label>
        <input class="form-input" type="email" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:<br>Must contain at least 8 characters</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" style="margin-top: 10px;">SIGN UP</button>
      </div>
    </form>
  </div>
</div>

<script src="js/login.js"></script>
